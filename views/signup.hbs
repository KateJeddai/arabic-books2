<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Arabic Language</title>
  <link  rel="stylesheet" href="/css/fontawesome-free-5.9.0-web/css/all.css" />  
  <link rel="stylesheet" href="/css/arab.css">  
   
</head>
<body>
  <div class="body-wrapper"></div>
  {{> header}}  
    <div class="card-container">
    {{#if message}}
    <div class="modal">
        <h3>{{message}}</h3>
        {{#if id}}
        <h3><a href="resend?user={{id}}" class="resend-confirm">Resend confirmation link.</a></h3>
        {{/if}}
    </div>
    {{else}}
      <div class="card-title"><h3>Create an account:</h3></div>    
      <form method="POST" action="/auth/users" class="signup-form" onsubmit="return validateMyForm();">        
        <div class="signup-form-wrapper">
          <div class="signup-form-inner">
            <div class="input-field">
              <label for="username">Username</label><br/>
              <input type="text" placeholder="Create a username" class="form-control" id="username" name="username" value="{{form.usernameholder}}" autofocus /><p class="danger" id="usernameholder">{{formData.username}}</p>
            </div>
            <div class="input-field">
              <label for="email">Email</label><br/>
              <input type="text" placeholder="Enter an email" class="form-control" id="email" name="email" value="{{form.emailholder}}"/><p class="danger" id="emailholder">{{formData.email}}</p>
            </div>
          </div>
          <div class="signup-form-inner">
            <div class="input-field">
              <label for="password">Password</label><br/>
              <input type="text" placeholder="Enter a password" class="form-control" id="pass" name="password" />
              <div class="tooltip">Eight or more characters, at least one uppercase, one lowercase, one special, and a number</div>
              <p class="danger" id="enter-pass">{{formData.password}}</p>
            </div>
            <div class="input-field">
              <label for="copy-password">Confirm Password</label><br/>
              <input type="text" placeholder="Confirm password" class="form-control" id="copy-pass" name="copypassword" /><p class="danger" id="confirm-pass"></p>
            </div>
          </div>
        </div>
        <button class="btn btn-signup" type="submit">Sign Up</button>
      </form>
    {{/if}}
  </div>
  {{> footer}}  
 <script src="/js/sidebar.js"></script>
 <script src="/js/arab.js"></script>
</body>
</html>
